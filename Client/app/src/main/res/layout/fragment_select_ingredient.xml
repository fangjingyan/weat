<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrapgit_content"
    android:fadingEdge="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="8dp"
    android:scrollbars="vertical"
    tools:context=".SelectIngredientFragment">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="8dp">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/title"
            android:layout_width="186dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Tell me what you have"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp"
            android:textStyle="bold"
            app:fontFamily="Open scans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/meat"
            android:layout_width="86dp"
            android:layout_height="27dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="32dp"
            android:text="Meat"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="Open scans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Pork"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pork"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meat" />

        <Button
            android:id="@+id/Beef"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="176dp"
            android:layout_marginLeft="176dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/beef"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meat" />

        <Button
            android:id="@+id/Mutton"
            android:layout_width="47dp"
            android:layout_height="42dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/mutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pork" />

        <Button
            android:id="@+id/Chicken"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="176dp"
            android:layout_marginLeft="176dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/chicken"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Beef" />

        <Button
            android:id="@+id/Egg"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/egg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Fish" />

        <TextView
            android:id="@+id/vegetable"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="196dp"
            android:text="Vegetable"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="Open scans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Tomato"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/tomato"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vegetable" />

        <Button
            android:id="@+id/Onion"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="84dp"
            android:background="@drawable/onion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vegetable" />

        <Button
            android:id="@+id/Potato"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="176dp"
            android:layout_marginLeft="176dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/potato"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vegetable" />

        <Button
            android:id="@+id/Cabbage"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/cabbage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vegetable" />

        <Button
            android:id="@+id/Spinach"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="176dp"
            android:layout_marginLeft="176dp"
            android:layout_marginTop="84dp"
            android:background="@drawable/spinach"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vegetable" />

        <Button
            android:id="@+id/Green_pepper"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="84dp"
            android:background="@drawable/green_pepper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vegetable" />

        <Button
            android:id="@+id/Dou_fu"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="148dp"
            android:background="@drawable/doufu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vegetable" />

        <Button
            android:id="@+id/Broccoli"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="176dp"
            android:layout_marginLeft="176dp"
            android:layout_marginTop="148dp"
            android:background="@drawable/broccoli"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vegetable" />

        <Button
            android:id="@+id/Corn"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="148dp"
            android:background="@drawable/corn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vegetable" />

        <Button
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="28dp"
            android:background="@android:color/holo_orange_dark"
            android:text="Let's go"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:fontFamily="Open Sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Broccoli" />

        <Button
            android:id="@+id/Fish"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/fish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meat" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>